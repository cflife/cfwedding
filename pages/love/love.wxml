<view class="container">
    <view class="header">
        <epsoide-cmp class="epsoide" index="{{loveStep}}" />
        <view class="like-container">
            <like-cmp bind:like="onLike" class="like" like="{{like}}" count="{{count}}" />
        </view>
    </view>
    <movie-cmp img="{{currentLove.path}}" content="{{currentLove.content}}" />
    <navi-cmp class="navi" latest="{{latest}}" first="{{first}}" catch:left="onNext" catch:right="onPrevious" title="{{currentLove.title}}" />
</view>