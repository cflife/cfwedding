/**index.wxss**/
.button {
  position: absolute;
  bottom: 0;
  width: 100%;
}

.aon {
  display: inline-flex;
  align-items: center;
  position: absolute;
  white-space: nowrap;
  animation: first 10s infinite linear forwards;top:10%;color:green;
  /* 防止向下换行*/
}

.doommview {
  z-index: 3;
  height: 80%;
  width: 100%;
  position: absolute;
}

.header_box {
  background: red;
  width: 50px;
  height: 50px;
  border-radius: 50%;
  z-index: 1;
}

.header_box image {
  width: 100%;
  height: 100%;
  border-radius: 50%;

  overflow: hidden;
}

.barrageText{
  position: relative;
  left: -10px;
  background:saddlebrown;
  padding: 0px 15px;
  color: white;
  border-radius: 15px
}

/**定义从右边向左边的移动的动画**/
@keyframes first {
  from {
    left: 100%;
  }

  to {
    left: -100%;
  }
}