<view bind:tap="onTap" class="container">
  <image  src="{{album.image||album.img}}"></image>
  <view class="description">
    <text class='title'>{{album.title}}</text>
    <text class='author'>{{album.describe}}</text>
    <view wx:if="{{showLike}}" class='foot'>
      <text class="footer">{{album.fav_nums}}  喜欢</text> 
    </view>
  </view>
</view>